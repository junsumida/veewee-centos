{
    "ntp": {
        "servers": ["ntp.nict.jp", "ntp.jst.mfeed.ad.jp"]
    },
    "rbenv": {
        "user": "vagrant",
        "group": "vagrant",
        "group_users": ["vagrant"],
        "install_prefix": "/home/vagrant",
        "root_path": "/home/vagrant/.rbenv"
    },
    "devbase": {
        "user": "vagrant",
        "group": "vagrant"
    },
    "nodejs": {
      "version": "0.10.24",
      "npm": "1.3.21"
    },
    "run_list":[
        "recipe[git]",
        "recipe[build-essential]",
        "recipe[ntp]",
        "recipe[rbenv::default]",
        "recipe[rbenv::ruby_build]",
        "recipe[nodejs]",
        "recipe[devbase]"
    ]
}

