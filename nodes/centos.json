{
    "ntp": {
        "servers": ["ntp.nict.jp", "ntp.jst.mfeed.ad.jp"]
    },
    "rbenv": {
        "user": "vagrant",
        "group": "vagrant",
        "group_users": ["vagrant"],
        "install_prefix": "/home/vagrant",
        "root_path": "/home/vagrant/.rbenv"
    },
    "devbase": {
        "user": "vagrant",
        "group": "vagrant",
        "vimplugins": [
            "vim-scripts/yanktmp.vim",
            "vim-scripts/hybrid.vim",
            "itchyny/lightline.vim",
            "mattn/emmet-vim",
            "scrooloose/nerdtree",
            "Shougo/neobundle.vim",
            "Shougo/unite.vim",
            "Shougo/neocomplcache",
            "Shougo/neosnippet"
        ]
    },
    "run_list":[
        "recipe[git]",
        "recipe[build-essential]",
        "recipe[ntp]",
        "recipe[rbenv::default]",
        "recipe[rbenv::ruby_build]",
        "recipe[devbase]"
    ]
}

